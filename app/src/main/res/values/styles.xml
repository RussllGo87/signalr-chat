<resources>

    <!-- Base application theme. -->
    <style name="AppMainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:popupBackground">#0F213F</item>
        <item name="android:disabledAlpha">0.5</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CaptureThemeFullScreen" parent="Theme.AppCompat.Light.DarkActionBar"/>

    <style name="SettingItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:drawablePadding">16dp</item>
    </style>


    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/photo_choose_bg</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--
    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@drawable/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@drawable/photo_dialog_out_anim</item>
    </style>
    -->

</resources>
