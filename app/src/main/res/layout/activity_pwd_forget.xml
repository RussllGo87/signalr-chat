<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.pingfang.signalr.chat.activity.PwdForgetActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_bg">

        <TextView
            android:id="@+id/btn_activity_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding_back_button"
            android:text="@string/btn_activity_back"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/tv_activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/padding_activity_title"
            android:text="@string/title_activity_pwd_forget"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_activity_title"/>

        <TextView
            android:id="@+id/tv_menu_drop_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding_activity_title"
            android:text="@string/tv_menu_drop_down"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="手机号码 "
                android:textColor="@color/text_color_tv_label_grey"
                android:textSize="@dimen/text_size_tv_label_phone_no"/>

            <EditText
                android:id="@+id/et_pwd_update_account_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:inputType="phone"
                android:hint="请输入手机号码"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="新  密  码"
                android:textColor="@color/text_color_tv_label_grey"
                android:textSize="@dimen/text_size_tv_label_phone_no"/>
            <EditText
                android:id="@+id/et_pwd_update_account_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:hint="请输入新密码"
                android:inputType="textPassword"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="确认密码"
                android:textColor="@color/text_color_tv_label_grey"
                android:textSize="@dimen/text_size_tv_label_phone_no"/>
            <EditText
                android:id="@+id/et_pwd_update_account_password_retype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:hint="请再次输入新密码"
                android:inputType="textPassword"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_account_validate_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入验证码"/>
            <TextView
                android:id="@+id/btn_load_validate_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_btn_bg"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="获取验证码"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:layout_marginTop="16dp"
                      android:orientation="horizontal">

            <TextView android:id="@+id/btn_pwd_update_submit"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:paddingTop="8dp"
                      android:paddingBottom="8dp"
                      android:layout_weight="1"
                      android:layout_marginRight="16dp"
                      android:background="@drawable/selector_btn_bg"
                      android:gravity="center"
                      android:text="确定"
                      android:textSize="20sp"
                      android:textColor="@android:color/white"/>

            <TextView android:id="@+id/btn_pwd_update_cancel"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:paddingTop="8dp"
                      android:paddingBottom="8dp"
                      android:layout_marginLeft="16dp"
                      android:background="@drawable/selector_btn_bg"
                      android:gravity="center"
                      android:text="取消"
                      android:textSize="20sp"
                      android:textColor="@android:color/white"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
