<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/btn_activity_back"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:padding="@dimen/padding_back_button"
                  android:text="@string/btn_activity_back"/>

        <TextView android:id="@+id/tv_activity_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:padding="@dimen/padding_activity_title"
                  android:text="广告资源发布"
                  android:textSize="@dimen/text_size_activity_title" />

        <TextView android:id="@+id/tv_offline_message"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_alignParentRight="true"
                  android:padding="@dimen/padding_activity_title"
                  android:text="@string/tv_offline_message"
                  android:visibility="gone"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal" >
        <EditText
            android:id="@+id/plength"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:layout_marginRight="1dp"
            android:hint="长度"
            android:inputType="numberDecimal"
            android:layout_weight="1"
            android:text="5"
            />
        <EditText android:id="@+id/pbroad"
                  android:layout_width="fill_parent"
                  android:layout_height="46dp"
                  android:layout_marginLeft="1dp"
                  android:hint="宽度"
                  android:inputType="numberDecimal"
                  android:text="5"
                  android:layout_weight="1"/>


    </LinearLayout>


    <EditText
        android:id="@+id/upaddress"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal" >
        <EditText
            android:id="@+id/contacts"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:layout_marginRight="1dp"
            android:hint="联系人"
            android:text="张三"
            android:layout_weight="2"
            />
        <EditText android:id="@+id/upmob"
                  android:layout_width="fill_parent"
                  android:layout_height="46dp"
                  android:layout_marginLeft="1dp"
                  android:hint="联系电话"
                  android:inputType="phone"
                  android:text="15817419383"
                  android:layout_weight="1"/>
    </LinearLayout>
    <EditText android:id="@+id/explain"
              android:layout_width="fill_parent"
              android:layout_height="52dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:layout_marginTop="2dp"
              android:text="如资源的使用时间，以及备注等信息..."/>

    <ImageView
        android:id="@+id/upimage"
        android:layout_width="105dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_empty" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/upisok"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:onClick="quedings"
            android:text="确定" />

        <Button
            android:id="@+id/upison"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:onClick="quxiaos"
            android:text="取消" />
    </LinearLayout>



    <com.baidu.mapapi.map.MapView
        android:id="@+id/upmapsess"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:visibility="gone" />

</LinearLayout>