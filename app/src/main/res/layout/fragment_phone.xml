        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="手机号码 "
                android:textColor="@color/text_color_tv_label_grey"
                android:textSize="@dimen/text_size_tv_label_phone_no"/>

            <EditText
                android:id="@+id/et_phone_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:inputType="phone"
                android:hint="请输入手机号码"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_validate_code_reg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入验证码"/>
            <TextView
                android:id="@+id/btn_load_validate_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_btn_bg"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="获取验证码"
                android:textColor="@android:color/white"/>
        </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="right"
                  android:layout_marginTop="16dp"
                  android:orientation="horizontal">

        <TextView android:id="@+id/btn_step_next_reg"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingTop="8dp"
                  android:paddingBottom="8dp"
                  android:paddingLeft="16dp"
                  android:paddingRight="16dp"
                  android:layout_marginLeft="16dp"
                  android:background="@drawable/selector_btn_bg"
                  android:gravity="center"
                  android:text="下一步"
                  android:textSize="20sp"
                  android:textColor="@android:color/white"/>
    </LinearLayout>


</LinearLayout>