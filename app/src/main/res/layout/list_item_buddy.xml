<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_vertical_list_item_msg_container"
                android:paddingLeft="@dimen/padding_horizontal_list_item_msg_container"
                android:paddingRight="@dimen/padding_horizontal_list_item_msg_container"
                android:paddingTop="@dimen/padding_vertical_list_item_msg_container">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user_portrait"
        android:layout_width="@dimen/iv_user_portrait_width"
        android:layout_height="@dimen/iv_user_portrait_width"
        android:layout_marginTop="6dp"
        android:src="@drawable/hale_default_user_portrait"/>

    <TextView
        android:id="@+id/tv_user_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_user_portrait"
        android:minHeight="24dp"
        android:paddingBottom="4dp"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:text="朋友昵称"
        android:textColor="@color/material_grey_600"
        android:textSize="24sp"/>

    <ImageView
        android:id="@+id/iv_user_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_user_nickname"
        android:layout_below="@+id/tv_user_nickname"
        android:layout_marginLeft="12dp"
        android:src="@drawable/icon_hale_male"/>

    <ImageView
        android:id="@+id/iv_user_distance_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_nickname"
        android:layout_toRightOf="@+id/iv_user_gender"
        android:src="@drawable/icon_hale_distance"/>

    <TextView
        android:id="@+id/tv_user_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_nickname"
        android:layout_toRightOf="@+id/iv_user_distance_icon"
        android:text="200米以内"
        android:textColor="@color/material_grey_600"/>

